#!/usr/bin/env rc

rootcolor='\001\e[1;35m\002'
inputcolor='\001\e[0m\002'
promptcolor='\001\e[1;33m\002'

# misc functions
fn sudo{ su -c $"* }
fn chroot{firejail '--chroot='$1 '--shell='/bin/sh}
fn du1 {du -ahxd1}
fn unique {awk '!($0 in a){a[$0];print $0}'}

# dirstack
fn dirs {printf '%s\n' $dirs | nl -v0 -n'ln'}
fn popd {n=$1{*=$dirs;shift $n;dirs=$*}}
fn ls {builtin ls --color $*}
fn cd {
    >[2=] *=`{realpath $1}

    # clean dirstack
    if(test -d $1)
        dirs=`{ printf '%s\n' ($1 $dirs) | unique }

    builtin cd $dirs(1)
    gitprompt
}
fn gitprompt {
    >[2=] {
        if(~ `{git status} *Changes*)
            prompt=`{echo -ne $promptcolor^'λ'^$inputcolor}^'* '
    if not
        prompt=`{echo -ne $promptcolor^'λ'^$inputcolor}^' '
    }
}


# env
dirs=($home) # default dirs
prompt=`{echo -ne $promptcolor^'λ'^$inputcolor}^' '
LANG=en_US.UTF-8
SHELL=/usr/bin/rc
PATH=~/.local/bin:$PATH
VISUAL=vim
EDITOR=vim
TERM=xterm-256color
LESS=eFRX
CFLAGS='-pipe -Os -fstack-protector-strong -fstack-clash-protection'
CXXFLAGS=$CFLAGS
PREFIX=$HOME/.local
PKG_CONFIG_PATH=/usr/lib/pkgconfig:$"PKG_CONFIG_PATH
SSH_ASKPASS=()

# init
>[2=] . $home/.extras.rc
cd
